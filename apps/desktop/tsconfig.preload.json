{
  "compilerOptions": {
    "outDir": "dist/main",
    "rootDir": "src/main",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node", "electron"],
    "skipLibCheck": true,
    "lib": ["DOM", "ES2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/main/preload.ts"],
  "exclude": ["dist", "node_modules"]
}
