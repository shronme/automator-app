{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/main",
    "rootDir": "src/main",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node", "electron"],
    "lib": ["DOM", "ES2022"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/main/preload.ts"],
  "exclude": ["dist", "node_modules"]
}
