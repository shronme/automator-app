{
  "compilerOptions": {
    "outDir": "dist/main",
    "rootDir": "src/main",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "types": ["node", "electron"],
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/main/**/*"],
  "references": [{ "path": "../../packages/common" }]
}
